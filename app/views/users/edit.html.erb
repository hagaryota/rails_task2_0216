<ul>
<li><%= link_to "アカウント", :user %></li>
<li><%= link_to "プロフィール", :edit_user %></li>
</ul>

<h2>プロフィール</h2>
 
    <%= form_with model: @users, local: true do |f| %>
      <% if @user.errors.any? %>
       <% @user.errors.full_messages.each do |message| %>
        <ul>
         <li><%= message %></li>
        </ul>
       <% end %>
      <% end %>

      <table>
        <tr>
          <th><%= f.label :image ,"アイコン画像" %></th>
          <td><% if @user.image? %>
                <%= image_tag @user.image.url %>
              <% end %>
                <%= f.file_field :image %></td>
        </tr>

        <tr>
          <th><%= f.label :name ,"名前" %></th>
          <td><%= f.text_field :name %></td>
        </tr>
 
        <tr>
          <th><%= f.label :introduce ,"自己紹介" %></th>
          <td><%= f.text_area :introduce %></td>
        </tr>
       </table>

      <div>
        <ul>
          <li><%= f.submit "更新"%></li>
        </ul>
      </div>
    <% end %>