<h2>登録済みルーム一覧</h2>
 
<% if flash[:notice] %>
<p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
  <thead>
    <tr>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>ルーム紹介</th>
      <th>料金</th>
      <th>作成日</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td>
          <% if room.image.attached? %>
            <%= image_tag room.image, class: "room_image" %>
          <% else %>
            <%= image_tag "https://presite-potepancamp-rails-02.herokuapp.com/assets/room01.jpg", class: "room_image" %>
          <% end %></td>
        <td><%= link_to room.name, room %></td>
        <td><%= room.introduce %></td>
        <td><%= room.price %></td>
        <td><%= room.updated_at.to_s(:datetime_jp) %></td>
        <td><%= link_to "編集", [:edit, room] %></td>
        <td>
        <%= button_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>