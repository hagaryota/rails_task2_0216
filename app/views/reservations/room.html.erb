    <%= image_tag @room.image.url, width: '800', height: 'auto' %><br>
      <h1><%= @room.name %></h1><br>
      <hr>
         紹介文：<p class ="room-letter"><%= @room.introduce %></p><br>
      <hr>
         住所：<p class ="room-letter"><%= @room.address %></p><br>
    
    <%= form_with model: @reservation, local: true do |f| %>
      <table>
        <tr>
          <th><%= f.label :start_date ,"開始日" %></th>
          <td><%= f.date_field :start_date %></td>
        </tr>
 
        <tr>
        <th><%= f.label :end_date ,"終了日" %></th>
        <td><%= f.date_field :end_date %></td>
        </tr>
 
        <tr>
          <th><%= f.label :persons ,"人数" %></th>
          <td><%= f.number_field :persons %></td>
        </tr>
       </table>

      <div>
        <ul>
          <li><%= f.submit "予約する"%></li>
        </ul>
      </div>
    <% end %>