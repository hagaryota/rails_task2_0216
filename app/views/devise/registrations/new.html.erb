<h2>新しいアカウントを作成</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <ul>
    <li>
      <p class="mandatory">必須</p>
      <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder:"ユーザー名", class:"user_new_account" %>
    </li>
    <li>
      <p class="mandatory">必須</p>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"メールアドレス", class:"user_new_account" %>
    </li>
    <li>
      <p class="mandatory">必須</p>
      <%= f.password_field :password, autocomplete: "new-password", placeholder:"パスワード", class:"user_new_account" %>
    </li>
    <li>
      <p class="mandatory">必須</p>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"パスワード確認", class:"user_new_account" %>
    </li>
  </ul>

  <div class="actions">
    <%= f.submit "新しいアカウントを作成" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
